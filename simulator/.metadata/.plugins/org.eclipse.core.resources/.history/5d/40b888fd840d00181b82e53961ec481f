#include <list>
#include <vector>
#include <algorithm>
#include "Node.h"

Define_Module(Node);

void Node::activity()
{
    receive(SimTime(100, SIMTIME_S), false);
    for(;;)
    {
        waitAndDeletePackets(SimTime(5, SIMTIME_MS));
        receive(SimTime(5, SIMTIME_MS), false);
    }
}
