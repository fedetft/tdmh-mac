#pragma once

#include <omnetpp.h>
#include "utility.h"

using namespace omnetpp;

/**
 * The Root Node of the Wandstem Mac.
 * Is the time synchronization reference and handles TDMA schedules
 */
class RootNode : public cSimpleModule
{
public:
    RootNode();

protected:
    virtual void activity();

private:
    static const int coroutineStack=32*1024;
};

